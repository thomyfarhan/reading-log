<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="readBook"
            type="com.aesthomic.readinglog.database.ReadBook" />

        <variable
            name="clickListener"
            type="com.aesthomic.readinglog.read.ReadListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{() -> clickListener.onClick(readBook)}">

        <TextView
            android:id="@+id/tv_list_read_month"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/gl_list_read_start"
            app:layout_constraintEnd_toEndOf="@id/gl_list_read_middle"
            app:layout_constraintTop_toTopOf="@id/gl_list_read_top"
            app:readMonthFormatted="@{readBook}"
            android:gravity="center"
            android:textSize="30sp"
            android:textStyle="bold"
            tools:text="SEP" />

        <TextView
            android:id="@+id/tv_list_read_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/tv_list_read_month"
            app:layout_constraintEnd_toEndOf="@id/tv_list_read_month"
            app:layout_constraintTop_toBottomOf="@+id/tv_list_read_month"
            app:layout_constraintBottom_toBottomOf="@id/gl_list_read_bottom"
            app:readDateFormatted="@{readBook}"
            android:gravity="center"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="12" />

        <TextView
            android:id="@+id/tv_list_read_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toStartOf="@id/gl_list_read_middle"
            app:layout_constraintEnd_toEndOf="@id/gl_list_read_end"
            app:layout_constraintTop_toTopOf="@id/tv_list_read_month"
            app:layout_constraintBottom_toTopOf="@id/tv_list_read_time"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="20sp"
            android:text="@{readBook.bookTitle}"
            tools:text="The Lord of The Ring The Lord of The Ring" />

        <TextView
            android:id="@+id/tv_list_read_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_list_read_title"
            app:layout_constraintStart_toStartOf="@id/tv_list_read_title"
            app:layout_constraintEnd_toEndOf="@id/tv_list_read_title"
            app:layout_constraintBottom_toBottomOf="@id/tv_list_read_date"
            app:readDurationFormatted="@{readBook}"
            android:textStyle="italic"
            tools:text="1 Hour 27 Minutes" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_list_read_middle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="100dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_list_read_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="8dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_list_read_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="8dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_list_read_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="8dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_list_read_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_end="8dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>